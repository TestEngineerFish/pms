<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_80"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="请选择"
                android:textColor="@color/blackTextColor"
                android:textSize="@dimen/px_30" />

            <ImageView
                android:id="@+id/period_view_close"
                android:layout_width="@dimen/px_22"
                android:layout_height="@dimen/px_22"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_30"
                android:gravity="center"
                android:src="@drawable/close" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_100"
            android:layout_marginLeft="@dimen/px_30"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/period_select_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_80"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="默认集团"
                android:textColor="@color/normal_main_text_icon_color"
                android:textSize="@dimen/px_28" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tags"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/thick_divider_color"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_org_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_998"
            android:layout_marginTop="10dp"
            android:background="@android:color/white">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</layout>
