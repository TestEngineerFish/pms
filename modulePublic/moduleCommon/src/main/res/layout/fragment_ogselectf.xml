<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_80"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="@dimen/px_30"
                android:textColor="@color/blackTextColor"
                android:text="请选择"/>
            <ImageView
                android:id="@+id/period_view_close"
                android:layout_width="@dimen/px_22"
                android:layout_height="@dimen/px_22"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/px_30"
                android:src="@drawable/close"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_80"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px_30"
            >
            <TextView
                android:id="@+id/period_select_default"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_80"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="@dimen/px_28"
                android:textColor="@color/normal_main_text_icon_color"
                android:text="默认集团"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tags"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_org_list"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_998"
            android:background="@android:color/white"
            >

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</layout>
