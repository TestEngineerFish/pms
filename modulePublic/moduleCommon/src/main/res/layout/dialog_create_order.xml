<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_alert_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:gravity="center"
        android:text="是否需要创建新工单？"
        android:textColor="#FF132D42"
        android:textSize="@dimen/font_size15"/>

    <View
        style="@style/base_underline" android:background="#f5f5f5"/>


    <TextView
        android:id="@+id/tv_send_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:gravity="center"
        android:text="派工单"
        android:textColor="#FF185CC7"
        android:textSize="@dimen/font_size15"/>

    <View
        style="@style/base_underline" android:background="#f5f5f5"/>

    <TextView
        android:id="@+id/tv_un_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:gravity="center"
        android:text="不合格单"
        android:textColor="#FF185CC7"
        android:textSize="@dimen/font_size15"/>

    <View
        style="@style/base_underline" android:background="#f5f5f5"/>

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="@dimen/px_30"
        android:paddingBottom="@dimen/px_30"
        android:gravity="center"
        android:text="取消"
        android:textColor="#FF185CC7"
        android:textSize="@dimen/font_size15"/>


</LinearLayout>