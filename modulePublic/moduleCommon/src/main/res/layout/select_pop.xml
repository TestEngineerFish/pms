<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <TextView
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@color/blackTextColor"
                    android:layout_centerInParent="true"
                    android:text="@string/tv_pl_choice"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp" />

                <ImageView
                    android:id="@+id/iv_close"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/iv_pop_close"
                    android:layout_marginRight="19dp"
                    android:layout_width="11dp"
                    android:layout_height="11dp" />

            </RelativeLayout>


                <TextView
                    android:id="@+id/select_type_fir"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/blackTextColor"
                    android:layout_centerInParent="true"
                    android:text="@string/tv_tiao_line"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/select_rec_fir"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

           <LinearLayout
               android:id="@+id/select_ln_sec"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
            <TextView
                android:id="@+id/select_type_sec"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/blackTextColor"
                android:layout_centerInParent="true"
                android:text="@string/tv_tiao_line"
                android:layout_width="wrap_content"
                android:layout_height="44dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/select_rec_sec"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/select_ln_thir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <View
                android:layout_margin="15dp"
                android:background="@drawable/iv_pop_line"
                android:layout_width="wrap_content"
                android:layout_height="1dp" />

                <TextView
                    android:id="@+id/select_type_thir"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/blackTextColor"
                    android:layout_centerInParent="true"
                    android:text="@string/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp" />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/select_rec_thir"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
           <LinearLayout
               android:id="@+id/select_ln_four"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
                <View
                    android:layout_margin="15dp"
                    android:background="@drawable/iv_pop_line"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/select_rec_four"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
           </LinearLayout>
            <LinearLayout
                android:id="@+id/select_ln_fif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_margin="15dp"
                    android:background="@drawable/iv_pop_line"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/select_type_fif"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@color/blackTextColor"
                    android:layout_centerInParent="true"
                    android:text="@string/tv_order_type"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp" />



                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/select_rec_fif"
                    android:numColumns="3"
                    android:verticalSpacing="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_marginTop="45dp"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentBottom="true">

                    <TextView
                        android:background="@drawable/shape_little_blue"
                        android:text="重置"
                        android:gravity="center"
                        android:textColor="@color/blueTextColor"
                        android:id="@+id/canclel"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/font_size15" />

                    <TextView

                        android:id="@+id/ok"
                        android:background="@drawable/iv_pop_confirm"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
       </ScrollView>
</layout>