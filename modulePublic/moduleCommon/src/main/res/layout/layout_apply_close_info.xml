<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ext"
            type="com.einyun.app.library.resource.workorder.model.ExtensionApplication" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/px_30"
            android:background="@drawable/bg_shadow"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/px_20"
                    android:gravity="center_vertical"
                    android:text="申请闭单信息"
                    android:textSize="@dimen/px_32" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/pd_view" />

            <LinearLayout
                style="@style/work_order_detail_ln"
                android:background="@color/white">

                <TextView
                    style="@style/work_order_detail_txt_left"
                    android:text="审批结果" />

                <TextView style="@style/work_order_detail_txt_right"
                    app:apply_status="@{ext.applicationState}"
                    />
            </LinearLayout>

            <LinearLayout style="@style/work_order_detail_ln">

                <TextView
                    style="@style/work_order_detail_txt_left"
                    android:text="审批时间" />

                <TextView style="@style/work_order_detail_txt_right"
                    android:text="@{ext.auditDate}"
                    />
            </LinearLayout>


            <LinearLayout style="@style/work_order_detail_ln">

                <TextView
                    style="@style/work_order_detail_txt_left"
                    android:text="申请人" />

                <TextView style="@style/work_order_detail_txt_right"
                    android:text="@{ext.createdName}"
                    />
            </LinearLayout>

            <LinearLayout style="@style/work_order_detail_ln">

                <TextView
                    style="@style/work_order_detail_txt_left"
                    android:text="申请时间" />

                <TextView style="@style/work_order_detail_txt_right"
                    android:text="@{ext.creationDate}"
                    />
            </LinearLayout>

            <LinearLayout style="@style/work_order_detail_ln">

                <TextView
                    style="@style/work_order_detail_txt_left"
                    android:text="申请原因" />

                <TextView style="@style/work_order_detail_txt_right"
                    android:text="@{ext.applicationDescription}"
                    />
            </LinearLayout>

            <LinearLayout style="@style/work_order_detail_ln">

                <TextView
                    style="@style/work_order_detail_txt_left"
                    android:text="申请照片" />
            </LinearLayout>
            <LinearLayout style="@style/work_order_detail_ln">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/send_order_close_pic_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
