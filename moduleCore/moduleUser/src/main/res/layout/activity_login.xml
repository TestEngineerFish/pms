<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="userModel"
            type="com.einyun.app.library.uc.user.model.UserModel" />

        <variable
            name="callBack"
            type="com.einyun.app.pms.user.core.ui.LoginViewModelActivity" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@mipmap/login_bg" />

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_org_code"
                    style="@style/login_input_ll">

                    <ImageView
                        style="@style/login_input_ll_img"
                        app:srcCompat="@mipmap/img_login_code" />

                    <EditText
                        android:id="@+id/et_org_code"
                        style="@style/login_input_ll_edit"
                        android:hint="请输入企业编码" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_org_code"
                    android:layout_marginTop="10dp"
                    android:background="#F3F4F9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:id="@+id/ll_user"
                    style="@style/login_input_ll">

                    <ImageView
                        style="@style/login_input_ll_img"
                        android:layout_toLeftOf="@id/et_user"
                        app:srcCompat="@mipmap/img_login_user" />

                    <com.einyun.app.pms.user.core.ui.widget.DropEditText
                        android:id="@+id/et_user"
                        style="@style/login_input_ll_edit"
                        android:hint="请输入用户名" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_delete"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:visibility="invisible"
                    app:srcCompat="@mipmap/editdelete" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_user"
                    android:layout_marginTop="10dp"
                    android:background="#F3F4F9" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:id="@+id/ll_password"
                    style="@style/login_input_ll">

                    <ImageView
                        style="@style/login_input_ll_img"
                        app:srcCompat="@mipmap/img_login_password" />

                    <EditText
                        android:id="@+id/et_password"
                        style="@style/login_input_ll_edit"
                        android:hint="请输入密码"
                        android:inputType="textPassword" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_option"
                    android:layout_width="20dp"
                    android:layout_height="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:visibility="invisible"
                    app:srcCompat="@mipmap/img_passshow3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/ll_password"
                    android:layout_marginTop="10dp"
                    android:background="#F3F4F9" />
            </RelativeLayout>

            <Button
                android:id="@+id/bt_login"
                style="@style/login_submit_btn"
                android:layout_marginTop="30dp"
                android:text="确定" />

        </LinearLayout>


    </LinearLayout>
</layout>