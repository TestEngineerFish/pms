<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="model"
            type="com.einyun.app.pms.disqualified.model.DisqualifiedDetailModel" />
        <variable
            name="callBack"
            type="com.einyun.app.pms.disqualified.ui.DisqualifiedDetailActivity" />
    </data>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <include layout="@layout/include_layout_activity_head" android:id="@+id/head_bar"/>
         <androidx.core.widget.NestedScrollView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fillViewport="true">
             <LinearLayout
                 android:orientation="vertical"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent">
                 <!--         工单信息-->
                 <androidx.cardview.widget.CardView
                     style="@style/cardview_style">
                     <LinearLayout
                         android:background="@drawable/shape_white_bg"
                         android:layout_width="match_parent"
                         android:orientation="vertical"
                         android:layout_height="wrap_content">
                         <RelativeLayout
                             android:layout_width="match_parent"
                             android:layout_height="44dp">
                             <TextView
                                 android:id="@+id/tv_approvaler_name"
                                 android:layout_marginLeft="10dp"
                                 android:gravity="center_vertical"
                                 android:textSize="16sp"
                                 android:textColor="@color/blackTextColor"
                                 android:text="工单信息"
                                 android:layout_width="wrap_content"
                                 android:layout_height="match_parent"/>
                             <TextView
                                 android:id="@+id/tv_deal_state"
                                 android:gravity="center"
                                 android:layout_marginRight="10dp"
                                 android:layout_centerVertical="true"
                                 android:layout_alignParentRight="true"
                                 android:layout_width="68dp"
                                 android:textSize="15sp"
                                 android:layout_height="24dp"/>
                         </RelativeLayout>

                         <ImageView
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:layout_marginLeft="10dp"
                             android:layout_marginRight="10dp"
                             android:src="@drawable/pd_view" />
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="工单编号" />
                             <TextView
                                 android:id="@+id/tv_complaint_time"
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="创建时间" />
                             <TextView
                                 android:id="@+id/tv_crecord_person"
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="分期" />
                             <TextView
                                 android:id="@+id/tv_ask_way"
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="检查日期" />
                             <TextView
                                 android:id="@+id/tv_ask_type"
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="问题描述" />
                             <TextView
                                 android:id="@+id/tv_finish_time"
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="条线" />
                             <TextView
                                 android:id="@+id/tv_current_deal_person"
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="严重程度" />
                             <TextView
                                 android:id="@+id/tv_inquiries_content"
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="纠正截止日期" />
                             <TextView
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <RelativeLayout
                             style="@style/style_rl_normal">
                             <TextView
                                 android:layout_marginBottom="10dp"
                                 style="@style/style_text_approval_left"
                                 android:text="被检查人" />
                             <TextView
                                 style="@style/style_text_approval_right"/>
                         </RelativeLayout>
                         <LinearLayout style="@style/work_order_detail_ln">
                             <TextView
                                 style="@style/work_order_detail_txt_left"
                                 android:layout_marginBottom="@dimen/px_20"
                                 android:text="图片" />
                         </LinearLayout>
                         <LinearLayout
                             android:background="@drawable/shape_white_bg"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:orientation="vertical">
                             <androidx.recyclerview.widget.RecyclerView
                                 android:id="@+id/list_pic"
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:layout_marginBottom="@dimen/px_30"
                                 app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
                         </LinearLayout>
                     </LinearLayout>
                 </androidx.cardview.widget.CardView>
             </LinearLayout>
         </androidx.core.widget.NestedScrollView>
     </LinearLayout>
</layout>