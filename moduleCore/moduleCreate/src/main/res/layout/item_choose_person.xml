<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="org"
            type="com.einyun.app.library.uc.usercenter.model.OrgModel" />
    </data>

    <LinearLayout
        android:id="@+id/ll_org"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/px_25"
        android:paddingLeft="@dimen/px_30"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FF132D42"
            android:textSize="@dimen/font_size16"
            android:text="@{org.name}"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/px_8"
            android:textColor="#FF132D42"
            android:textSize="@dimen/font_size13"
            android:singleLine="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="@{org.postName}"
            />

    </LinearLayout>
</layout>
