<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="workOrder"
            type="com.einyun.app.library.resource.workorder.model.DisttributeDetialModel" />
    </data>

    <LinearLayout
        android:id="@+id/panel_work_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginBottom="@dimen/px_30"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/px_20"
                android:gravity="center_vertical"
                android:text="报修信息"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_20"
                android:gravity="center_vertical"
                android:textColor="@color/txt_blue_color"
                android:textSize="@dimen/px_30"
                app:order_status="@{workOrder.data.info.status}" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pd_view" />

        <LinearLayout
            style="@style/work_order_detail_ln"
            android:background="@color/white">

            <TextView
                style="@style/work_order_detail_left_txt"
                android:layout_marginTop="@dimen/px_30"
                android:text="报修时间" />

            <TextView
                style="@style/work_order_detail_txt_right"
                android:text="@{workOrder.data.info.orderNo}" />
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">

            <TextView
                style="@style/work_order_detail_left_txt"
                android:layout_marginTop="@dimen/px_30"
                android:text="记录人" />

            <TextView
                style="@style/work_order_detail_txt_right"
                android:text="@{workOrder.data.info.divideName}" />
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">

            <TextView
                style="@style/work_order_detail_left_txt"
                android:layout_marginTop="@dimen/px_30"
                android:text="报修方式" />

            <TextView
                style="@style/work_order_detail_txt_right"
                android:text="@{workOrder.data.info.txName}" />
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">
            <TextView style="@style/tv_create_order_red_star"
                android:layout_marginTop="@dimen/px_30"/>
            <TextView
                style="@style/work_order_detail_left_txt"
                android:layout_marginLeft="@dimen/px_0"
                android:text="报修区域" />
            <TextView
                style="@style/work_order_detail_txt_right"
                android:drawableRight="@drawable/edit"
                android:text="@{workOrder.data.info.typeName}" />
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">
            <TextView style="@style/tv_create_order_red_star"
                android:layout_marginTop="@dimen/px_30"/>
            <TextView
                style="@style/work_order_detail_left_txt"
                android:layout_marginLeft="@dimen/px_0"
                android:text="报修类别" />
            <TextView
                style="@style/work_order_detail_txt_right"
                android:text="@{workOrder.data.info.typeName}" />
            <TextView
                style="@style/work_order_detail_txt_right"
                android:drawableRight="@drawable/edit"
                android:text="@{workOrder.data.info.createTime}" />
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">

            <TextView style="@style/tv_create_order_red_star"
                android:layout_marginTop="@dimen/px_30"/>
            <TextView
                style="@style/work_order_detail_left_txt"
                android:layout_marginLeft="@dimen/px_0"
                android:text="性质评估" />

            <RadioGroup
                android:id="@+id/rgs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_normal"
                    android:layout_width="@dimen/px_120"
                    android:layout_height="@dimen/px_50"
                    android:background="@drawable/select_radio_button_normal"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="1"
                    android:text="普通"
                    android:textColor="@drawable/select_radio_button_text"
                    android:textSize="@dimen/font_size13" />

                <RadioButton
                    android:id="@+id/rb_general"
                    android:layout_width="@dimen/px_120"
                    android:layout_height="@dimen/px_50"
                    android:layout_marginLeft="@dimen/px_20"
                    android:background="@drawable/select_radio_button_general"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="2"
                    android:text="一般"
                    android:textColor="@drawable/select_radio_button_text"
                    android:textSize="@dimen/font_size13" />

                <RadioButton
                    android:id="@+id/rb_warning"
                    android:layout_width="@dimen/px_120"
                    android:layout_height="@dimen/px_50"
                    android:layout_marginLeft="@dimen/px_20"
                    android:background="@drawable/select_radio_button_warning"
                    android:button="@null"
                    android:gravity="center"
                    android:tag="3"
                    android:text="严重"
                    android:textColor="@drawable/select_radio_button_text"
                    android:textSize="@dimen/font_size13" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">
            <TextView style="@style/tv_create_order_red_star"
                android:layout_marginTop="@dimen/px_30"/>
            <TextView
                style="@style/work_order_detail_left_txt"
                android:layout_marginLeft="@dimen/px_0"
                android:text="预约上门时间" />
            <TextView
                style="@style/work_order_detail_txt_right"
                android:drawableRight="@drawable/edit"
                android:text="@{workOrder.data.info.typeName}" />
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">

            <TextView
                style="@style/work_order_detail_left_txt"
                android:text="报修内容" />

            <TextView
                style="@style/work_order_detail_txt_right"
                android:text="@{workOrder.data.info.location}" />
        </LinearLayout>

        <LinearLayout style="@style/work_order_detail_ln">

            <TextView
                style="@style/work_order_detail_txt_left"
                android:layout_marginBottom="@dimen/px_20"
                android:text="图片" />
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/send_order_detail_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_30"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>
    </LinearLayout>
</layout>
