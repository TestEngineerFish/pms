<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.MaterialComponents.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="iv_slide_show_view">
        <item name="android:layout_width">@dimen/px_88</item>
        <item name="android:layout_height">@dimen/px_88</item>
    </style>

    <style name="tv_slide_show_view" parent="base_wrap_style">
        <item name="android:textSize">@dimen/font_size12</item>
        <item name="android:textColor">@color/hint_text_color</item>
        <item name="android:layout_marginTop">@dimen/px_20</item>
    </style>
    <style name="ll_slide_show_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="tv_slide_show_view_red">
        <item name="android:layout_width">@dimen/px_40</item>
        <item name="android:layout_height">@dimen/px_40</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/px_10</item>
        <item name="android:layout_marginRight">@dimen/px_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size10</item>
        <item name="android:visibility">gone</item>
        <item name="android:background">@drawable/shape_cir_red</item>
    </style>

    <style name="tv_work_table_pending_num" parent="base_wrap_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_size19</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="tv_work_table_pending_name" parent="base_wrap_style">
        <item name="android:layout_marginTop">@dimen/px_8</item>
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/font_size13</item>
    </style>
    <style name="ll_work_table_pending">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/font_size14</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="iv_light_waring">
        <item name="android:layout_width">@dimen/px_24</item>
        <item name="android:layout_height">@dimen/px_24</item>
        <item name="android:src">@mipmap/img_light_warn</item>
        <item name="android:layout_marginLeft">@dimen/px_2</item>
        <item name="android:layout_marginBottom">@dimen/px_40</item>
        <item name="android:visibility">invisible</item>
    </style>
    <style name="vertical_line">
        <item name="android:layout_width">@dimen/px_2</item>
        <item name="android:layout_height">@dimen/px_100</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">#14FFFFFF</item>
    </style>
</resources>
