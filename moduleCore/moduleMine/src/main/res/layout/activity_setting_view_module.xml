<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="settingModel"
            type="com.einyun.app.pms.mine.module.SettingModule" />
        <variable
            name="callBack"
            type="com.einyun.app.pms.mine.ui.SettingViewModuleActivity" />
    </data>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <include layout="@layout/include_layout_activity_head" android:id="@+id/head_bar"/>
        <RelativeLayout
            android:background="@color/white"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/blackTextColor"
                android:text="@string/current_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_version"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textSize="15sp"
                android:textColor="@color/blackTextColor"
                android:text="V1.0.0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:onClick="@{()->callBack.onLoginOutClick()}"
                android:textSize="16sp"
                android:textColor="@color/greyTextColor"
                android:gravity="center"
                android:text="@string/tv_login_out"
                android:id="@+id/tv_login_out"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
     </LinearLayout>
</layout>