<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.FeedBackSucActivity">

        <include
            android:id="@+id/head_bar"
            layout="@layout/include_layout_activity_head" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/activity_bg_color" />

        <ImageView
            android:layout_width="@dimen/px_146"
            android:layout_height="@dimen/px_182"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_84"
            android:scaleType="fitXY"
            android:src="@drawable/feed_success" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_63"
            android:text="非常感谢，我们已收到您的反馈!"
            android:textColor="@color/black_13"
            android:textSize="@dimen/font_size17"
            android:textStyle="bold" />

        <Button
            android:id="@+id/list_btn"
            style="@style/submit_btn"
            android:layout_width="@dimen/px_269"
            android:layout_height="@dimen/px_88"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_52"
            android:text="历史反馈" />

        <TextView
            android:id="@+id/feed_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/px_40"
            android:text="继续提意见"
            android:textColor="@color/blue_4b"
            android:textSize="@dimen/font_size16" />
    </LinearLayout>
</layout>