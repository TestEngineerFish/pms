<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="signSetModule"
            type="com.einyun.app.pms.mine.module.SignSetModule" />
        <variable
            name="callBack"
            type="com.einyun.app.pms.mine.ui.SignSetViewModuleActivity" />
    </data>
     <LinearLayout
         android:orientation="vertical"
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         <include layout="@layout/include_layout_activity_head" android:id="@+id/head_bar"/>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">


             <EditText
                 android:id="@+id/edit_et_slogan"
                 android:layout_width="match_parent"
                 android:layout_height="100dp"
                 android:gravity="top|left"
                 android:padding="10dp"
                 android:textSize="16sp"
                 android:maxLength="30"
                 android:background="@color/white"/>

             <TextView
                 android:id="@+id/edit_tv_slogan_num"
                 android:layout_width="wrap_content"
                 android:layout_height="20dp"
                 android:gravity="center"
                 android:layout_marginRight="20dp"
                 android:layout_alignParentRight="true"
                 android:text="0/30"
                 android:layout_marginTop="80dp"/>

         </RelativeLayout>
     </LinearLayout>
</layout>