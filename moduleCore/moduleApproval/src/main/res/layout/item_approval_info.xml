    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="23"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_line_top"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:background="@color/blueTextColor" />


            <TextView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/iv_point"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_line_bottom"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/blueTextColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text=""
                    android:textColor="@color/blackTextColor"
                    android:textSize="14sp" />

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv_state"
                        android:src="@drawable/iv_approval__pass_state"
                        android:layout_width="13dp"
                        android:layout_height="13dp"/>
                    <TextView
                        android:id="@+id/tv_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingLeft="7dp"
                        android:paddingTop="3dp"
                        android:paddingRight="7dp"
                        android:paddingBottom="3dp"
                        android:text="@string/tv_had_pass"
                        android:textSize="13sp" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text=""
                android:textColor="#9da3b4"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>