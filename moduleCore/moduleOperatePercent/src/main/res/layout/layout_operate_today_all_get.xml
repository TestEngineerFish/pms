<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.cardview.widget.CardView style="@style/cardview_style">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_90"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/px_20"
                    android:gravity="center_vertical"
                    android:text="今日收缴完成情况"
                    android:textColor="@color/blackTextColor"
                    android:textSize="@dimen/font_size16"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/px_20"
                    android:gravity="center_vertical"
                    android:text="单位：万元"
                    android:textColor="@color/normal_main_text_icon_color"
                    android:textSize="@dimen/font_size12" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/pd_view" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="今日收缴率"
                        android:textColor="@color/today_txt_color"
                        android:textSize="@dimen/font_size12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_54"
                        android:text="45%"
                        android:textColor="@color/txt_black_order"
                        android:textSize="@dimen/font_size23"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_10"
                        android:text="增长20%"
                        android:textColor="@color/today_txt_color"
                        android:textSize="@dimen/font_size12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px_20"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_40"
                        android:layout_marginTop="@dimen/px_20"
                        android:text="今日增幅排名:8"
                        android:textColor="@color/today_txt_color"
                        android:textSize="@dimen/font_size12" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/operate_all_get_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                style="@style/cardview_style"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_marginRight="@dimen/px_20"
                android:layout_marginBottom="@dimen/px_44">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_196"
                    android:background="@drawable/all_get_today_bg"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/to_fir_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/px_47"
                            android:text="今日实收"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/to_fir_top"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/px_18"
                            android:text="234,87"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size18" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/to_sec_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/px_47"
                            android:text="日均应收"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/to_sec_top"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/px_18"
                            android:text="234,87"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size18" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/to_thir_top"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/px_47"
                            android:text="日均差额"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/to_thir_top"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/px_18"
                            android:text="234,87"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_size18"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>