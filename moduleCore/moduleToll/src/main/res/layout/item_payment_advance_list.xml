<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="payadvance"
            type="com.einyun.app.pms.toll.model.PaymentAdvanceModel2.DataBean.DataListBean" />
    </data>

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_marginTop="@dimen/px_20"
                android:id="@+id/ischeck"
                android:layout_marginLeft="@dimen/px_29"
                android:layout_centerVertical="true"
                android:checked="false"
                android:background="@drawable/select_check"
                android:button="@null"
                android:layout_width="@dimen/px_30"
                android:layout_height="@dimen/px_30"/>
            <TextView
                android:layout_marginTop="@dimen/px_20"
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物业服务费"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/px_89"
                android:textColor="#ff333333"
                android:textSize="@dimen/font_size17"
                />
            <TextView
                android:id="@+id/tv_park_num"
                android:background="@drawable/iv_park_bg"
                android:layout_width="80dp"
                android:layout_height="@dimen/px_46"
                android:layout_marginTop="@dimen/px_100"
                android:layout_marginLeft="@dimen/px_89"
                android:gravity="center"
                android:text="地下车位B894"
                android:textColor="#fff7b500"
                android:textSize="11sp"
                />
            <TextView
                android:layout_marginTop="@dimen/px_20"
                android:id="@+id/tv_residueAmount"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:layout_centerVertical="true"
                android:layout_width="150dp"
                android:gravity="end"
                android:layout_height="wrap_content"
                android:text="可用余额：3000元"
                android:textColor="@color/blackTextColor"
                android:textSize="13sp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="缴费月份数"
                android:layout_marginLeft="@dimen/px_89"
                android:layout_centerVertical="true"
                android:textColor="@color/greyTextColor"
                android:textSize="@dimen/font_size14"
                />
            <RelativeLayout
                android:layout_marginRight="@dimen/px_30"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/px_223"
                android:layout_height="30dp" >

                <TextView
                    android:id="@+id/tv_reduce"
                    android:background="@drawable/shape_rect_gray"
                    android:text="-"
                    android:gravity="center"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60"/>
                <TextView
                    android:id="@+id/tv_month_times"
                    android:layout_marginLeft="@dimen/px_58"
                    android:background="@drawable/shape_rect_gray"
                    android:text="1"
                    android:gravity="center"
                    android:layout_width="@dimen/px_103"
                    android:layout_height="@dimen/px_60"/>
                <TextView
                    android:id="@+id/tv_add"
                    android:layout_marginLeft="@dimen/px_159"
                    android:background="@drawable/shape_rect_gray"
                    android:text="+"
                    android:gravity="center"
                    android:layout_width="@dimen/px_60"
                    android:layout_height="@dimen/px_60"/>

            </RelativeLayout>
        </RelativeLayout>
        <View
            android:background="@color/thin_divider_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预存金额:"
                    android:layout_marginLeft="@dimen/px_89"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/greyTextColor"
                    android:textSize="@dimen/font_size14"
                    />
                <TextView
                    android:id="@+id/tv_advance_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="300"
                    android:layout_marginLeft="@dimen/px_8"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/redTextColor"
                    android:textSize="@dimen/font_size14"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:layout_marginLeft="@dimen/px_8"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/greyTextColor"
                    android:textSize="@dimen/font_size14"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_change_money"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改金额"
                android:layout_marginLeft="@dimen/px_89"
                android:layout_centerVertical="true"
                android:textColor="@color/blueTextColor"
                android:textSize="@dimen/font_size14"
                />
        </RelativeLayout>
    </LinearLayout>

</layout>

