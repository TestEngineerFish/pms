<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="history"
            type="Object" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_first"
                android:background="@color/blueTextColor"
                android:layout_width="@dimen/px_2"
                android:layout_height="@dimen/px_40"
                android:visibility="invisible"/>
            <RelativeLayout
                android:layout_width="@dimen/px_22"
                android:layout_height="@dimen/px_22"
                android:background="@drawable/iv_point">

                <TextView
                    android:id="@+id/item_histroy_step"
                    android:layout_width="@dimen/px_22"
                    android:layout_height="@dimen/px_22"
                    android:textColor="@color/white"
                    android:gravity="center" />
            </RelativeLayout>
            <ImageView
                android:background="@color/blueTextColor"
                android:id="@+id/item_histroy_img"
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/px_30"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_3"
                android:orientation="vertical">
                <TextView
                    android:layout_marginRight="@dimen/px_170"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_black_order"
                    android:text="欠款到期"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size14" />
                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/px_30"
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txt_black_order"
                    android:text=""
                    android:textSize="@dimen/font_size14" />
            </RelativeLayout>


            <LinearLayout
                android:layout_marginTop="@dimen/px_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/px_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_height="match_parent">


                    <TextView
                        android:text="尊敬的xxx业主您好，您的物业相关费用欠费周期较长，烦请您尽快缴纳相关费用，感谢您的支持"
                        android:id="@+id/tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/px_10"
                        android:layout_marginRight="@dimen/px_10"
                        android:textSize="@dimen/font_size12"
                        android:gravity="center_vertical"
                        android:textColor="@color/material_txt_color"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

