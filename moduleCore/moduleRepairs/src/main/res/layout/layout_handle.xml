<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="repairs"
            type="com.einyun.app.library.workorder.model.RepairsDetailModel" />
    </data>
    <androidx.cardview.widget.CardView
        style="@style/cardview_style">
    <LinearLayout
        android:id="@+id/repairs_work_order_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_90"
            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical"
                android:text="处理"
                android:layout_marginLeft="@dimen/px_20"
                android:textColor="@color/txt_black_order"
                android:textStyle="bold"
                android:textSize="@dimen/font_size16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/px_20"
                android:gravity="center_vertical"
                android:textColor="@color/txt_blue_color"
                android:textSize="@dimen/px_30"
                />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/pd_view" />

        <LinearLayout
            style="@style/ll_create_order"
            android:layout_marginLeft="@dimen/px_20"
            android:paddingLeft="@dimen/px_0"
            >

            <TextView
                style="@style/tv_create_order_name"
                android:text="是否上门"
                android:layout_weight="0"
                android:textStyle="normal"
                android:textColor="@color/blackTextColor"/>
            <Button
                android:id="@+id/arrive_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_60"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@drawable/arrive_bg"
                android:textColor="@color/white"
                android:text="上门"/>
            <Button
                android:id="@+id/send_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_60"
                android:layout_marginLeft="@dimen/px_30"
                android:visibility="gone"
                android:background="@drawable/send_bg"
                android:textColor="@color/white"
                android:text="已发送"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/arriveCode_layout"
            style="@style/ll_create_order"
            android:layout_marginLeft="@dimen/px_20"
            android:paddingLeft="@dimen/px_0"
            android:visibility="gone"
            >

            <TextView
                style="@style/tv_create_order_name"
                android:text="验证码"
                android:layout_weight="0"
                android:textStyle="normal"
                android:textColor="@color/blackTextColor"/>
            <EditText
                android:id="@+id/check_edt"
                android:layout_width="@dimen/px_200"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_20"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/check_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/px_60"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@drawable/arrive_bg"
                android:textColor="@color/white"
                android:text="校验"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/repair_select_people"
            style="@style/ll_create_order"
            android:layout_marginLeft="@dimen/px_20"
            android:paddingLeft="@dimen/px_0"
            >

            <TextView
                style="@style/tv_create_order_name"
                android:text="是否有偿"
                android:layout_weight="0"
                android:textStyle="normal"
                android:textColor="@color/blackTextColor"/>
            <RadioGroup
                android:id="@+id/repair_handle_if_paid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/px_100"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="@dimen/px_26"
                    android:layout_height="@dimen/px_26"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:tag="1"
                    android:button="@null"
                    android:background="@drawable/if_paid_radio_btn"
                    android:checked="false"
                  />
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="@dimen/px_15"
                     android:textColor="@color/blackTextColor"
                     android:text="是"/>
                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="@dimen/px_26"
                    android:checked="true"
                    android:layout_height="@dimen/px_26"
                    android:layout_marginLeft="@dimen/px_20"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:background="@drawable/if_paid_radio_btn"
                    android:button="@null"
                    android:tag="2"
                   />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_15"
                    android:textColor="@color/blackTextColor"
                    android:layout_gravity="center_vertical"
                    android:text="否"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            style="@style/ll_create_order"
            android:paddingLeft="@dimen/px_0"
            android:layout_marginLeft="@dimen/px_20"
            >

            <TextView
                style="@style/tv_create_order_name"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:text="维修工时(h)"
                android:textStyle="normal"
                android:textColor="@color/blackTextColor"/>
            <com.einyun.app.common.ui.widget.BaseEditText
                android:id="@+id/repair_work_hours"
                android:layout_width="@dimen/px_200"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="@dimen/px_100"
                android:gravity="center_vertical"
                android:textColorHint="@color/edit_hint_color"
                android:inputType="numberDecimal"
                android:textSize="@dimen/font_size14"
                android:hint="请输入"/>
            <TextView
                style="@style/tv_create_order_name"
                android:layout_width="wrap_content"
                android:layout_weight="0"
                android:text="小时"
                android:textStyle="normal"
                android:textColor="@color/blackTextColor"/>
        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
