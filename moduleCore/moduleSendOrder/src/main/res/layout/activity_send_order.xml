<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="sendOrderModel"
            type="com.einyun.app.pms.sendorder.model.SendOrderModel" />

        <variable
            name="callBack"
            type="com.einyun.app.pms.sendorder.ui.SendOrderActivity" />
    </data>

    <LinearLayout
        android:id="@+id/test_ln"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/activity_bg_color"
        android:orientation="vertical">

        <include
            android:id="@+id/head_bar"
            layout="@layout/include_layout_activity_head" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_send_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabIndicatorColor="@color/stress_text_btn_icon_color"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/blackTextColor"
            app:tabTextColor="@color/normal_main_text_icon_color"/>
      <!--  <com.einyun.app.common.ui.widget.OgSelectView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="分期"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_marginRight="@dimen/px_10"
                    android:gravity="center"
                    android:textColor="@color/normal_main_text_icon_color"
                    />
                <ImageView
                    android:layout_width="@dimen/px_12"
                    android:layout_height="@dimen/px_12"
                    android:src="@drawable/down"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_10"
                    android:scaleType="fitXY"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="分期"
                    android:layout_marginLeft="@dimen/px_10"
                    android:layout_marginRight="@dimen/px_10"
                    android:textColor="@color/normal_main_text_icon_color"
                    android:gravity="center"
                    />
                <ImageView
                    android:layout_width="@dimen/px_12"
                    android:layout_height="@dimen/px_12"
                    android:src="@drawable/down"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/px_10"
                    android:scaleType="fitXY"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_send_work"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.viewpager.widget.ViewPager>


    </LinearLayout>
</layout>


