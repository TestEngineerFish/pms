<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.ApplyLateActivity">
    <LinearLayout
        style="@style/ll_create_order"
        >

        <TextView style="@style/tv_create_order_red_star" />

        <TextView
            style="@style/tv_create_order_name"
            android:text="已延期次数" />
        <TextView
            style="@style/tv_create_order_name"
            android:layout_marginLeft="@dimen/px_132"
            android:textSize="@dimen/font_size15"
            android:text="3次" />
    </LinearLayout>
    <LinearLayout
        style="@style/ll_create_order"
        >

        <TextView style="@style/tv_create_order_red_star" />

        <TextView
            style="@style/tv_create_order_name"
            android:text="已延期次数" />
        <TextView
            style="@style/tv_create_order_name"
            android:layout_marginLeft="@dimen/px_132"
            android:textSize="@dimen/font_size15"
            android:text="3次" />
    </LinearLayout>
    <LinearLayout
        style="@style/ll_create_order"
        >

        <TextView style="@style/tv_create_order_red_star" />

        <TextView
            style="@style/tv_create_order_name"
            android:text="延期天数（天）" />
        <EditText
            style="@style/tv_create_order_name"
            android:layout_marginLeft="@dimen/px_132"
            android:background="@null"
            android:hint="请输入"
            android:textSize="@dimen/font_size15"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/ll_create_order"
        >

        <TextView style="@style/tv_create_order_red_star" />

        <TextView
            style="@style/tv_create_order_name"
            android:text="申请原因" />
    </LinearLayout>
    <LinearLayout
        style="@style/ll_create_order"
        android:layout_height="wrap_content">

        <com.einyun.app.common.ui.component.limit.LimitInput
            android:id="@+id/location_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:hintText="请输入位置信息"
            app:maxNumber="100" />
    </LinearLayout>
    <LinearLayout style="@style/ll_create_order">

        <TextView style="@style/tv_create_order_red_star" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size14"
            android:textColor="@color/blackTextColor"
            android:text="处理后图片" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size12"
            android:textColor="@color/red"
            android:layout_marginLeft="@dimen/px_20"
            android:text="(最多四张)" />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/send_order_img_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>