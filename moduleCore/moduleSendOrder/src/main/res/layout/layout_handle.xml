<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/panel_work_order_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/px_30"
    android:background="@drawable/bg_shadow"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_90"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/px_20"
            android:gravity="center_vertical"
            android:text="处理信息"
            android:textSize="@dimen/px_32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/px_20"
            android:gravity="center_vertical"
            android:textColor="@color/txt_blue_color"
            android:textSize="@dimen/px_30"
             />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/pd_view" />

    <LinearLayout
        style="@style/work_order_detail_ln"
        android:background="@color/white">

        <TextView
            style="@style/work_order_detail_txt_left"
            android:text="处理人" />

        <TextView
            style="@style/work_order_detail_txt_right"
             />
    </LinearLayout>

    <LinearLayout style="@style/work_order_detail_ln">

        <TextView
            style="@style/work_order_detail_txt_left"
            android:text="处理时间" />

        <TextView
            style="@style/work_order_detail_txt_right"
            />
    </LinearLayout>

    <LinearLayout style="@style/work_order_detail_ln">

        <TextView
            style="@style/work_order_detail_txt_left"
            android:text="处理后图片" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/send_order_handle_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px_20"
        android:layout_marginLeft="@dimen/px_20"
        android:layout_marginRight="@dimen/px_20"
        android:layout_marginBottom="@dimen/px_30"
        />

    <LinearLayout style="@style/work_order_detail_ln">

        <TextView
            style="@style/work_order_detail_txt_left"
            android:text="执行人" />

        <TextView
            style="@style/work_order_detail_txt_right"
             />
    </LinearLayout>

</LinearLayout>
